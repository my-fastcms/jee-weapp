
.weui-content {
  padding: 30rpx;
  box-sizing: border-box;
}

.weui-navbar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: fixed;
  z-index: 500;
  top: 0;
  left:0;
  padding:20rpx 0;
  border-bottom: none !important;
  background:#f8f8f8;
}

.weui-navbar__item.proinfo-tab-tit { 
  font-size:28rpx;}

.weui-panel {
  background-color: #fff;
  margin-top: 10px;
  overflow: hidden;
  border: 1px solid #eee;
  border-radius: 10rpx;
}
.weui-panel:before, .weui-panel:after { border:0;}
.weui-panel__hd {
  padding: 10rpx 30rpx;
  height: 68rpx;
  line-height: 68rpx;
  font-size: 28rpx;
}
.padding_0 {
  padding: 0px;
}

.act {
  color: orangered;
}

.weui-media-box__desc {
  padding: 4rpx 0;
  font-size: 28rpx;
  color: #666;
}
.price {
  font-family: Arial, Helvetica, sans-serif;
  color: #fa3c64;
}
.weui-media-box__hd{
  width:82px; 
  height:82px; 
  margin: 10rpx;
  border: 1rpx solid white;
  border-radius: 10rpx;
  }

.settlement-green{
  color: green;
}
.weui-media-box {
  padding: 2px;
  position: relative;
}

/* 去除下拉灰色框 */
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.right_view {
  float: right;
}

/*无订单*/
.no-group {
  position: absolute;
  width: 100%;
}
.no-group image {
  width: 300rpx;
  height: 300rpx;
}
.no-group>view {
  margin-top: 240rpx;
}
.text-center {
  text-align: center;
}
.mt-20 {
  margin-top: 20rpx;
}