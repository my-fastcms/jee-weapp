.goods-container{
  display: flex;
  justify-content: space-between;  
  flex-wrap:wrap;
  box-sizing: border-box;
  /* background-color:#fff; */
  padding:0 20rpx;
}
.goods-box{
  /* width: 343rpx;
  height: 462rpx; */
  width:50%;
  flex:none;
  overflow: hidden;
  padding:20rpx;
  box-sizing: border-box;
}
.goods-box .img-box{
  /* width: 343rpx;
  height: 343rpx; */
  overflow: hidden;
  border-radius: 10rpx; 
}
.goods-box .img-box image{
  /* 小图样式 */
   width: 100%;
   height:200rpx;
}
.img-box {
  /* 加的 */
  height: 200rpx;
}
.goods-box .img-box .image01 {
  /* 加的 */
  position: relative;
  top: -200rpx;
}
.goods-box .goods-title{
  /* width: 343rpx; */
  text-overflow: ellipsis;
  overflow: hidden;
  display:-webkit-box;
  -webkit-line-clamp:1;
  -webkit-box-orient:vertical; 
  font-size: 26rpx;
  color:#666;
  padding-top: 16rpx;
  line-height: 1.5;
}
.goods-box .goods-price{
  overflow: hidden;
  font-size: 36rpx;
  color:#fa3c64;
  font-weight:600;
}
.goods-box .seckill-price{
  width: 250rpx;
  height: 50rpx;
  overflow: hidden;
  font-size: 35rpx;
  color:#fa3c64;
  font-weight:600;
}
.goods-box .p-cost{
  font-size: 22rpx;
  color:#999;
  text-decoration:line-through;
  font-weight:400;
}
.goods-box .group{
  padding:10rpx 0rpx;
}
.goods-box .size-price { font-size:30rpx; padding-right:10rpx;}
.loading{  
  /* padding-top: 80rpx; */
  text-align: center;
  height: 80rpx;
}  
.loading:before{  
  display: inline-block;  
  margin-right: 5rpx;  
  vertical-align: middle;  
  content: '';  
  width: 40rpx;  
  height: 40rpx;
  background-size: contain;  
  animation: rotate 1s linear infinite;  
}  
.loading.complete:before{  
  display: none;  
}
