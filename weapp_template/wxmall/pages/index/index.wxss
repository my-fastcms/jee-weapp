.type-container{
  width: 100%;
  height: 88rpx;
  background-color: #f5f5f5;
  overflow: hidden;
  display:flex;position:fixed;z-index:500;top:0;
}
.type-navbar{
  white-space: nowrap;
  height: 88rpx;
  width: 100%;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.type-box{
  padding:0 30rpx;
  box-sizing: content-box;
  font-size: 30rpx;
  line-height: 82rpx;
  text-align: center;
  display: inline-block;
  overflow: hidden;
}
.type-navbar-item{
  border-bottom: 6rpx solid #f5f5f5;
}
.type-item-on{
  border-bottom: 6rpx solid #fa3c64;
  color:#fa3c64;
}
