/*外部容器*/

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

/*整体列表*/

.carts-list {
  display: flex;
  flex-direction: column;
  padding: 20rpx;
}

/*每行单元格*/

.carts-item {
  display: flex;
  padding: 30rpx 20rpx;
  background: #fff;
  border-radius: 10rpx;
  border: 1px solid #eee;
}

/*item与button的容器*/

.carts-container {
  position: relative;
  padding: 20rpx;
}

.close_icon {
  z-index: 9999;
  width: 24rpx;
  height: 24rpx;
  line-height: 24rpx;
  font-size: 30rpx;
  position: absolute;
  right: 6rpx;
  top: 6rpx;
  padding: 10rpx;
  color: #ccc;
  border: 1rpx solid #eee;
  border-radius: 50%;
  text-align: center;
  background: #fff;
}

/*左部图片*/

.carts-image {
  width: 150rpx;
  height: 150rpx;
}

/*右部描述*/

.carts-text {
  padding: 0 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  font-size: 24rpx;
  flex: auto;
}

/*右上部分标题*/

.carts-title {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
}

/*右下部分价格与数量*/

.carts-subtitle {
  font-size: 28rpx;
  color: darkgray;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

/*价格*/

.carts-price {
  color: #f60;
  font-size: 30rpx;
}

.spec_box {
  padding: 6rpx 0rpx;
}

.spec_cell {
  display: inline-block;
  padding: 4rpx 6rpx;
  text-align: center;
  line-height: 38rpx;
  margin-right: 10rpx;
  margin-bottom: 6rpx;
  font-size: 28rpx;
  border: 1rpx solid gainsboro;
}

.spec_cell_red {
  color: white;
  background: #f60;
  display: inline-block;
  padding: 4rpx 6rpx;
  text-align: center;
  line-height: 36rpx;
  margin-right: 10rpx;
  margin-bottom: 6rpx;
  font-size: 24rpx;
  border: 1rpx solid #f60;
}

/*人民币符号*/

.carts-price:before, .select-and-amount text:last-child:before {
  /* content: '￥';	 */
}

/*商品加减按钮*/

/*stepper容器*/

.stepper {
  border: 1px solid #ccc;
  border-radius: 3px;
  height: 56rpx;
  margin: 0 auto;
}

/*加号与减号*/

.stepper text {
  width: 44rpx;
  line-height: 56rpx;
  text-align: center;
  float: left;
  color: #999;
}

/*数值*/

.stepper input {
  color: #333;
  float: left;
  margin: 0 auto;
  width: 80rpx;
  line-height: 56rpx;
  text-align: center;
  font-size: 24rpx;
  border-left: 1px solid #ccc;
  border-right: 1px solid #ccc;
}

/*普通样式*/

.stepper .normal {
  color: #333;
}

/*禁用样式*/

.stepper .disabled {
  color: #ccc;
}

/*复选框样式*/

.carts-list icon {
  margin-top: 60rpx;
  margin-right: 20rpx;
}

/*底部按钮*/

.carts-footer {
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  position: fixed;
  bottom: 0;
  background: white;
  z-index: 9999;
}

.select-and-amount {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-left: 20rpx;
}

/*复选框*/

.carts-footer icon {
  margin-left: 20rpx;
  display: block;
}

/*全选字样*/

.carts-footer text {
  font-size: 30rpx;
  margin-left: 8rpx;
  /*line-height: 10rpx;*/
  display: block;
}

/*立即结算按钮*/

.carts-footer .button {
  line-height: 100rpx;
  text-align: center;
  width: 300rpx;
  /* height: 80rpx; */
  background-color: #f60;
  color: white;
  font-size: 36rpx;
  border-radius: 0;
  border: 0;
}

/*删除按钮*/

.carts-footer .delete {
  height: 80rpx;
  width: 200rpx;
  text-align: right;
  line-height: 80rpx;
  color: #fc9326;
}

/*删除按钮*/

.delete-button {
  width: 60px;
  font-size: 16px;
  height: 99%;
  line-height: 90px;
  border: 0;
  border-radius: 0;
  position: absolute;
  right: 0;
  top: 0;
}

.delete-button:before {
  border: 0;
}

.cart-no-data {
  padding: 40rpx 0;
  color: #999;
  text-align: center;
}

.price {
  color: red;
  font-size: 28rpx;
  line-height: 22px;
}

.price_blod {
  color: #f60;
  font-size: 32rpx;
  font-weight: bold;
  line-height: 22px;
  overflow:hidden; /*超出一行文字自动隐藏*/
  /* text-overflow:ellipsis;文字隐藏后添加省略号 */
  white-space:nowrap;  /*强制不换行*/

}

.price_del {
  color: gray;
  text-decoration: line-through; /*文字排版--删除线*/
  font-size: 11px;
  line-height: 22px;
}

.carts-info {
  width: 100%;
  height: 40rpx;
  display: flex;
  flex-direction: row;
  position: fixed;
  bottom: 100rpx;
  z-index: 9999;
}

.carts-info image {
  width: 160rpx;
  height: 40rpx;
  display: flex;
  flex-direction: row;
  position: fixed;
  justify-content: flex-start;
  align-items: flex-start;
  left: 30rpx;
}

.price_info {
  color: #f60;
  font-size: 30rpx;
  font-weight: bold;
  line-height: 40rpx;
  display: flex;
  flex-direction: row;
  position: fixed;
  left: 200rpx;
}

.place {
  width: 100%;
  height: 100rpx;
  background-color: #f8f8f8;
}

